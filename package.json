{
  "name": "react-hooks-firebase-auth",
  "version": "0.2.4",
  "description": "Library for easy handling of Firebase Authentication, complete with provider token related events",
  "main": "dist/index.js",
  "source": "src/index.ts",
  "module": "dist/index.m.js",
  "unpkg": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rimraf dist && microbundle --external react --globals react=React --strict --no-compress",
    "format-check": "prettier --check .",
    "format": "prettier --write .",
    "test": "jest --coverage --passWithNoTests",
    "lint": "eslint . --ext .tsx --ext .ts",
    "type-check": "tsc --noEmit",
    "clean-packages": "rimraf node_modules && rimraf package-lock.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dkershner6/react-hooks-firebase-auth.git"
  },
  "author": "Derek Kershner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dkershner6/react-hooks-firebase-auth/issues"
  },
  "homepage": "https://github.com/dkershner6/react-hooks-firebase-auth#readme",
  "peerDependencies": {
    "react": "16.*",
    "firebase": "7.*"
  },
  "dependencies": {
    "unstated-next": "^1.1.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.10.1",
    "@testing-library/react": "^10.3.0",
    "@types/node": "^14.0.11",
    "@types/react": "^17.0.15",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "firebase": "^7.15.4",
    "jest": "^26.0.1",
    "microbundle": "^0.12.3",
    "mock-react-hooks-firebase-auth": "^1.0.2",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "files": [
    "dist/*"
  ]
}
